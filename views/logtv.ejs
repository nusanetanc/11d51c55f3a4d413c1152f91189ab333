      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade add-card" id="TvList" role="tabpanel" aria-labelledby="profile-tab">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Place</th>
                <th scope="col">Status</th>
                <th scope="col">Layout</th>
                <th scope="col">Url</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% tvs.forEach(function(tvs){ %>
              <tr>
                <th scope="row"><%= tvs.tvId %></th>
                <td><%= tvs.city %> - <%= tvs.place %></td>
                <% if(tvs.status == "1"){ %>
                  <td>Active</td>
                <% } else if(tvs.status == "0"){ %>
                  <td>Un Active</td>
                <% } %>
                  <td><%= tvs.layout %></td>
                <% if(tvs.layout == "Layout1"){ %>
                  <td>http://103.253.115.140:3000/tv/online/1/<%= tvs.tvId %></td>
                <% } else if(tvs.layout == "Layout2"){ %>
                  <td>http://103.253.115.140:3000/tv/online/2/<%= tvs.tvId %></td>
                <% } %>
                <td><a href="http://103.253.115.140:3000/admin/tv/edit/<%= tvs.tvId %>" type="button" class="btn btn-outline-dark">Edit</a></td>
              </tr>
              <% }) %>
